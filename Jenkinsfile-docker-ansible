pipeline {
  agent none

  stages {
    stage('Checkout') {
      agent any
      steps {
        git branch: 'main', url: 'https://github.com/raraduck/test-maven-java-spring-hello-webapp'
      }
    }
    stage('Build') {
      agent {
        docker { image 'maven:3-openjdk-11' }
      }
      steps {
        sh 'mvn clean package -DskipTests=true'
      }
    }
    stage('Test') {
      agent {
        docker { image 'maven:3-openjdk-11' }
      }
      steps {
        sh 'mvn test'
      }
    }
    stage('Build Docker Image') {
      agent any
      steps {
        sh 'docker image build -t myhello .'
      }
    }
    stage('Tag Docker Image') {
      agent any
      steps {
        sh 'docker image tag myhello dwnusa/myhello:$BUILD_NUMBER'
        sh 'docker image tag myhello dwnusa/myhello:latest'
      }
    }
    stage('Publish Docker Image') {
      agent any
      steps {
        withDockerRegistry(credentialsId: 'docker', url: 'https://index.docker.io/v1/') {
          sh 'docker image push dwnusa/myhello:$BUILD_NUMBER'
	        sh 'docker image push dwnusa/myhello:latest'
        }
      }
    }
    stage('Run Docker Container') {
      agent {
        docker { 
          image 'ghcr.io/c1t1d0s7/jenkins-ansible-agent'
          args '-u 0:0 -e DOCKER_HOST=tcp://172.31.20.212:2375' 
        }
      }
      steps {
        ansiblePlaybook(playbook: 'docker-container-deploy.yaml')
      }
    }
  }
}
